<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wildan.kampunganggrek">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".setting"
            android:parentActivityName=".MainActivity"
            android:theme="@style/RegisTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wildan.kampunganggrek.MainActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/RegisTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wildan.kampunganggrek.LoginActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoBar"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
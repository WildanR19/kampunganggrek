<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notaView">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_nota"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            >

            <ImageView
                android:id="@+id/gbnota"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginLeft="10dp"
                card_view:srcCompat="@drawable/anggrek1" />

            <ImageView
                android:id="@+id/circle4"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_below="@+id/bgHeader"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-80dp"
                android:layout_marginRight="-100dp"
                android:src="@drawable/circletransparant" />
            <ImageView
                android:id="@+id/circle5"
                android:layout_width="182dp"
                android:layout_height="182dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-150dp"
                android:layout_marginBottom="-30dp"
                android:translationZ="-5dp"
                android:src="@drawable/circletransparant" />

            <TextView
                android:id="@+id/nota_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang : "
                android:layout_toRightOf="@+id/gbnota"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/namaA"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/nota_title"
                android:fontFamily="@font/amaranth"
                android:text="Nama"
                android:textStyle="bold"
                card_view:fontFamily="@font/amaranth" />
            <TextView
                android:id="@+id/harga_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Barang : "
                android:layout_toRightOf="@+id/gbnota"
                android:layout_below="@+id/nota_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/hargaA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaA"
                android:layout_toRightOf="@+id/harga_nota"
                android:layout_marginTop="10dp"
                android:text="Harga"
                card_view:fontFamily="@font/amaranth" />

            <TextView
                android:id="@+id/date_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pembelian : "
                android:layout_toRightOf="@+id/gbnota"
                android:layout_below="@+id/harga_nota"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga_nota"
                android:layout_toRightOf="@+id/date_nota"
                android:layout_marginTop="10dp"
                android:text="date"
                card_view:fontFamily="@font/amaranth" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>